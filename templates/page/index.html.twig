{% extends 'base.html.twig' %} 
{% block body %}
<div class="container">
  <div class="row">
    <h2>Welcome to Guestbook</h2>
    <div class="col-md-10 ml-md-auto">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for row in guestbooks %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{row.user.email}}</h5>
                {% if row.image %}
                    <img class="card-img-top" src="{{ asset('uploads/images/' ~ row.image) }}" alt="">
                {% endif %}
                <p class="card-text">{{ row.text }}</p>            
            </div>
        </div>
    {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
